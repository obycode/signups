html
  head
    title Empower4Life Signups
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
  body(class="landing is-preload")
    - var title = 'Error';
    include header
    .outer-main
      main
        section(class="Main-content")
          h2 #{heading || "Something went wrong"}
          p #{message || "Please try again. If the problem persists, let us know."}
          if context
            p Context: #{context}
          if error
            p #{error}
          if supportEmail
            p #[a(href=`mailto:${supportEmail}?subject=Error` target="_blank") #{supportEmail}]
          p
            a(class="button-style button-style3" href="javascript:history.back()") Go Back
            | 
            a(class="button-style button-style2" href="/") Home
      include footer
