html
  head
    title Empower4Life Signups
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
  body(class="landing is-preload")
    - var title = 'Events';
    include header
    .outer-main
      main
        section(class="Main-content")
          if error
            .error #{error}
          each event in events
            .row
              .column
                h2 #{event.title}
                if event.summary
                  p #{event.summary}
                else
                  p #{event.description}
                p.button-p
                  a(class="button-style button-style3" href="/event/" + event.id) Go to Sign Up Page
              .column
                img(src=event.image, alt=event.title)
            hr
      include footer