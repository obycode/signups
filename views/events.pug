html
  head
    title Empower4Life Signups
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
  body(class="landing is-preload events-page-body")
    - var title = 'Events';
    include header
    .outer-main
      main
        section(class="Main-content events-page")
          if error
            .error #{error}
          if events && events.length
            .events-list
              each event in events
                a.event-card-link(href="/event/" + event.id aria-label=`Sign up for ${event.title || 'event'}`)
                  article.event-card
                    .event-card-content
                      h2.event-card-title #{event.title || 'Untitled Event'}
                      if event.summary
                        p.event-card-summary #{event.summary}
                      else if event.description
                        p.event-card-summary #{event.description}
                      else
                        p.event-card-summary Details coming soon.
                      p.event-card-actions
                        span(class="button-style button-style3 event-card-cta") Sign Up
                    .event-card-media
                      if event.image
                        img(src=event.image, alt=event.title, loading="lazy")
                      else
                        .event-card-placeholder No Image Available
          else
            p No active events are available right now.
      include footer
