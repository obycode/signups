html
  head
    title Empower4Life Signups
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
  body(class="landing is-preload")
    - var title = "Thank You";
    include header
    .outer-main
      main
        section(class="Main-content signup-success-page")
          .signup-success-shell
            .signup-success-banner
              p.signup-success-kicker Signup Confirmed
              p.signup-success-copy Sign up successful! We've sent these details to your email.
            .signup-success-card
              .signup-success-item
                if item.title
                  h3.signup-success-title #{item.title}
                if item.start_time && item.end_time
                  p.signup-success-time #{item.start} - #{item.end}
                else if item.end_time
                  p.signup-success-time Deadline: #{item.end}
              .signup-success-meta
                p.signup-success-quantity Signed up for: #[strong #{count}]
                if comment
                  p.signup-success-comment
                    span Comment:
                    |  #{comment}
              if event.email_info
                .signup-success-section
                  h4.signup-success-section-title Event Details
                  .signup-success-rich !{event.email_info}
              if item.email_info
                .signup-success-section
                  h4.signup-success-section-title Item Details
                  .signup-success-rich !{item.email_info}
              if item.notes
                .signup-success-section
                  h4.signup-success-section-title Notes
                  .signup-success-rich !{item.notes}
              if item.emailInfo
                .signup-success-section
                  h4.signup-success-section-title Additional Details
                  .signup-success-rich !{item.emailInfo}
              .signup-success-actions
                a(href=`/event/${event.id}` class='button-style button-style1') Sign up for another
      include footer
