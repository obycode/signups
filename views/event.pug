html
  head
    title Empower4Life Signups
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/css/main.css")
  body(class="landing is-preload")
    - var title = event.Title;
    include header
    .outer-main
      main
        section(class="Main-content")
          .event
            p
              img(src=event.Image, alt=event.Title)
            p #{event.Description}
            hr
            for item in items
              .row
                .column
                  h3 #{item.Title}
                  p #{item.Notes}
                .column
                  p #{item.Start} - #{item.End}
                  if item.Have < item.Needed
                    span.slots #{item.Have} of #{item.Needed} Slots Filled
                    p 
                      if loggedIn
                        a(href="/signup?item=" + item.ID class="button-style button-style2") Sign Up
                      else 
                        a(href="/login?item=" + item.ID class="button-style button-style2") Sign Up
                  else
                    span.slots All Slots Filled
              hr
      include footer